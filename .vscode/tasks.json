{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "npm",
			"script": "build",
			"group": "build",
			"problemMatcher": [],
			"label": "npm:build",
			"detail": "webpack"
		},
		{
			"type": "npm",
			"script": "lint",
			"problemMatcher": {
				"owner": "eslint",
				"fileLocation": "absolute",
				"pattern": [
					{
						"regexp": "^([^\\s].*)$",
						"file": 1
					},
					{
						"regexp": "^\\s+(\\d+):(\\d+)\\s+(error|warning|info)\\s+(.*)\\s\\s+(.*)$",
						"line": 1,
						"column": 2,
						"severity": 3,
						"message": 4,
						"code": 5,
						"loop": true
					}
				]
			},
			"label": "npm: lint",
			"detail": "eslint -c .eslintrc --ext .ts src"
		},
		{
			"type": "npm",
			"script": "lint:fix",
			"problemMatcher": [
				"$eslint-stylish"
			],
			"label": "npm: lint:fix",
			"detail": "eslint -c .eslintrc --ext .ts src --fix"
		}
	]
}